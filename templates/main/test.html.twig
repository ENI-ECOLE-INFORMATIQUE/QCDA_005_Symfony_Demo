{% extends 'base.html.twig' %}
{% block body %}
<h1>Test</h1>
    {# Crée une Variable #}
    {% set name = "Philippe" %}
    <h2>{{ name | upper }}</h2>
    <h2>{{ name | length }}</h2>

    {# Crée un tableau #}
    {% set colors = ["orange","brown","turquoise","blue"] %}
    <p>Nombre de couleurs : {{ colors | length }}</p>
    {% for color in colors %}
        <div>{{ loop.index }} - </div>
        <div>{{ loop.last }}</div>
        <div style="background-color: {{ color }};">{{ color }}</div>
    {% endfor %}
    <p>{{ colors | join(' / ') }}</p>

    {# Création d'un Objet #}
    {% set book ={
            title: 'Symfony',
            year: '2006',
            author: 'Fabien Potencier'
        }
    %}
    <h3>{{ book.author }}</h3>
<div>
    {% for key,val in book %}
        <div>{{ key }}: {{ val }}</div>
    {% endfor %}
</div>
<div>
    {% set titre ="<h1>Mon titre avec la balise h1 </h1>" %}
    {{ titre | raw }}

    {% set javascript ="<script>alert('toto'); </script>" %}
    {{ javascript |raw }}
</div>

<div>
    {{ "+1 year" | date('Y') }}
</div>
    <p>{{ mySerie.title | raw }} - {{ autreVar }}</p>

{% endblock %}

{% block title %}{{ parent() }} | Test {% endblock %}
