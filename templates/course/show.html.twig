{% extends 'base.html.twig' %}

{% block title %}
    {{ course.name}}| {{ parent() }}
{% endblock %}

{% block body %}
    <h1>{{ course.name }}</h1>
    {# Afficher le détail du cours #}
    <p>{{ course.content }}</p>
    <p>Durée (jours) : {{ course.duration }}</p>
    <p>Date de création : {{ course.dateCreated | date('d/m/Y') }}</p>
    <p>Publié : {{ course.published ? "Oui":"Non" }}</p>
{% endblock %}

